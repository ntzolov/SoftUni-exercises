<section class="register-form-container">
  <form method="POST">
    <h3>Register</h3>
    <label>Email</label>
    <input type="email" name="email" class="box" id="" value="{{body.email}}">
    <label>Username</label>
    <input type="text" name="username" class="box" id="" value="{{body.username}}">
    <label>Password</label>
    <input type="password" name="password" class="box" id="" value="{{body.password}}">
    <label>Confirm Password</label>
    <input type="password" name="rePassword" class="box" id="" value="{{body.rePassword}}">
    <input type="submit" value="Register" class="btn">
    <p>Have an account ? <a href="/auth/login">Click here</a></p>
  </form>
</section>