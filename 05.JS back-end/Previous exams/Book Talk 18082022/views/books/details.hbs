<section class='details-page'>
  <h1>
    Details
  </h1>
  <article class='details-card'>
    <article class='details-card-text'>
      <h2>
        Title:
        <br />
        {{book.title}}
      </h2>
      <h3>
        Author:
        {{book.author}}
      </h3>
      <h3>
        Stars:
        {{book.stars}}
      </h3>
      <h3>
        Genre:
        {{book.genre}}
      </h3>
      <h3>
        Review:
        {{book.bookReview}}
      </h3>

      <!-- If there is no registered user, do not display buttons-->
      {{#if isAuthenticated}}
      <div class='buttons'>
        <!-- Only for registered user and author of the review -->
        {{#if isOwner}}
        <a href='/catalog/{{book._id}}/edit' class='btn-edit'>
          Edit
        </a>
        <a href='/catalog/{{book._id}}/delete' class='btn-delete'>
          Delete
        </a>
        <!-- logged in user who has not yet wished book-->
        {{else}}
        {{#if isWished}}
        <p class='wish-pub'>
          You already added the book to your wish list
        </p>
        {{else}}
        <a href='/catalog/{{book._id}}/wish' class='btn-wish'>
          Wish to read
        </a>
        {{/if}}
        {{/if}}

        <!-- logged in user who has already wished book-->
      </div>
      {{/if}}
    </article>

    <article class='details-card-image'>
      <img src='{{book.image}}' />
    </article>
  </article>
</section>