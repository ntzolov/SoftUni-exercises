<main>

  <section id="catalog">
    <h1>All posts</h1>
    <div class="band">

      <!-- If there are posts for creature in the database display each of them -->
      {{#if creatures}}
      {{#each creatures}}
      <div class="flip flip-vertical">
        <div class="front">
          <img src="{{image}}" alt="Thestral">
        </div>
        <div class="back">
          <h1>{{name}}</h1>
          <h2>Species: {{species}}</h2>
          <p>Description: {{description}} </p>
          <a href="/catalog/{{_id}}/details" class="details">Details</a>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div class="no-posts">
        <p class="no-offer">There are no posts yet...</p>
      </div>
      {{/if}}

    </div>
  </section>
</main>