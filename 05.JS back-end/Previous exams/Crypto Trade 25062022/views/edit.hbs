  <!-- <div>
            <div class="errorContainer">
                <p>Error</p>
            </div>
        </div> -->
  // prettier-ignore
  <section id='edit-container'>
    <div class='edit-container-info'>
      <h1>
        Edit Announcement
      </h1>
      <form method='POST'>
        <label>
          Name:
        </label>
        <input type='text' id='name' name='name' value='{{crypto.name}}' />
        <label>
          Image:
        </label>
        <input type='text' id='image' name='imageUrl' value='{{crypto.imageUrl}}' />
        <label>
          Price:
        </label>
        <input type='number' id='price' name='price' value='{{crypto.price}}' />
        <label>
          Description:
        </label>
        <textarea name='description' id='description'>
          {{crypto.description}}
        </textarea>
        <label>
          Payment method:
        </label>
        <select id='payment' name='paymentMethod'>
          {{{options}}}
        </select>
        <input type='submit' id='btn' value='EDIT' />
      </form>
    </div>
  </section>
</main>